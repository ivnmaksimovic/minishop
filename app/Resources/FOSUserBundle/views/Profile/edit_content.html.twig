{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit" novalidate>
    {#{{ form_widget(form) }}#}
    <div class="form-group">{{ form_row(form.username, {'label': 'Korisnicko ime', 'attr': {'class': 'form-control'}}) }}</div>
    <div class="form-group">{{ form_row(form.email, {'label': 'Korisnicko ime', 'attr': {'class': 'form-control'}}) }}</div>
    <div class="form-group">{{ form_row(form.current_password, {'label': 'Lozinka', 'attr': {'class': 'form-control'}}) }}</div>
    {{ form_row(form._token) }}
    <div>
        <input class="btn btn-yellow" type="submit" value="{{ 'profile.edit.submit'|trans }}" />
    </div>
</form>
