{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">
    <div class="form-group">{{ form_row(form.current_password, {'label': 'Trenutna lozinka', 'attr': {'class': 'form-control'}}) }}</div>
    <div class="form-group">{{ form_row( form.plainPassword.first, {'label': 'Nova lozinka', 'attr': {'class': 'form-control'}}) }}</div>
    <div class="form-group">{{ form_row( form.plainPassword.second, {'label': 'Potvrda nove lozinke', 'attr': {'class': 'form-control'}}) }}</div>
    {{ form_row(form._token) }}
    <div>
        <input class="btn btn-yellow" type="submit" value="{{ 'change_password.submit'|trans }}" />
    </div>
</form>
