
<table class="records_list">
    <thead>
    <tr>
        <th>Artikal</th>
        <th>Kolicina</th>
        <th>Akcije</th>
    </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.product }}</td>
            <td>{{ entity.quantity }}</td>
            <td>
                <ul>
                    <li>
                        <a onclick="addToCart({{ entity.product }})">Dodaj jos jedan</a>
                    </li>
                    <li>
                        <a onclick="removeFromCart({{ entity.product }})">Oduzmi jedan</a>
                    </li>
                    <li>
                        <a onclick="deleteFromCart({{ entity.product }})">Ukloni proizvod</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

