{% extends 'CommonBundle::admin_layout.html.twig' %}

{% block content %}

    <div class="col-md-5">
        <h1>Izmena artikla</h1>

        <form action="{{ path('product_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
            <input type="hidden" name="_method" value="PUT" />
            <div class="form-group">{{ form_row(edit_form.productCode, {'label': 'Sifra artikla', 'attr': {'class': 'form-control'}}) }}</div>
            <div class="checkbox">{{ form_row(edit_form.active, {'label': 'Artikal aktivan'}) }}</div>
            <div class="form-group">{{ form_row(edit_form.category, {'label': 'Kategorija', 'attr': {'class': 'form-control'}}) }}</div>
            <div class="form-group">{{ form_row(edit_form.brand, {'label': 'Brend', 'attr': {'class': 'form-control'}}) }}</div>
            <div class="form-group">{{ form_row(edit_form.productName, {'label': 'Naziv (Model)', 'attr': {'class': 'form-control'}}) }}</div>
            <div class="form-group">{{ form_row(edit_form.productColor, {'label': 'Boja', 'attr': {'class': 'form-control'}}) }}</div>
            <div class="form-group">{{ form_row(edit_form.productSize, {'label': 'Velicina', 'attr': {'class': 'form-control'}}) }}</div>
            <div class="form-group">{{ form_row(edit_form.productDescription, {'label': 'Opis'}) }}</div>
            <div class="form-group">{{ form_row(edit_form.productPrice, {'label': 'Cena', 'attr': {'class': 'form-control'}}) }}</div>
            <div class="form-group">{{ form_row(edit_form.productRabat, {'label': 'Popust', 'attr': {'class': 'form-control'}}) }}</div>
            {#<div class="form-group">{{ form_row(edit_form.image, {'label': 'Slika', 'attr': {'class': 'form-control'}}) }}</div>#}
            {{ form_row(edit_form._token) }}

            <a href="{{ asset ('uploads/documents/') }}{{ entity.imgPath }}" target="_blank"><img src="{{ asset ('uploads/documents/') }}{{ entity.imgPath }}" /></a>

            <button class="btn btn-yellow" type="submit">Izmeni</button>
        </form>



        <ul class="record_actions">
            <li><a href="{{ path('product') }}">Povratak na listu</a></li>
            <li>
                <form action="{{ path('product_delete', { 'id': entity.id }) }}" method="post">
                    <input type="hidden" name="_method" value="DELETE" />
                    {{ form_widget(delete_form) }}
                    <button class="btn btn-yellow" type="submit">Izbrisi artikal</button>
                </form>
            </li>
        </ul>
    </div>

{% endblock %}
