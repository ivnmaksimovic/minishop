{% extends 'ProductBundle::admin_layout.html.twig' %}

{% block content -%}

<div id="magacin">
    <h1>Izmena artikla</h1>

    <form action="{{ path('product_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Izmeni</button>
        </p>
    </form>

        <ul class="record_actions">
    <li class="admin_button">
        <a href="{{ path('product') }}">
            Povratak na listu
        </a>
    </li>
    <li>
        <form action="{{ path('product_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Izbrisi artikal</button>
        </form>
    </li>
</ul>
</div>
{% endblock %}
