{% extends 'CommonBundle::admin_layout.html.twig' %}

{% block content %}
    <div class="col-md-5">
        <h1>Izmena brenda</h1>

        <form action="{{ path('brand_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} novalidate>
            <input type="hidden" name="_method" value="PUT" />
            <div class="form-group">{{ form_row(edit_form.brandName, {'label': 'Naziv brenda', 'attr': {'class': 'form-control'}}) }}</div>
            <div class="form-group">{{ form_row(edit_form.brandDescription, {'label': 'Opis brenda'}) }}</div>
            <div class="form-group">{{ form_row(edit_form.image, {'label': 'Logo brenda', 'attr': {'class': 'form-control'}}) }}</div>
            {{ form_row(edit_form._token) }}

            <a href="{{ asset ('uploads/documents/') }}{{ entity.imgPath }}" target="_blank"><img src="{{ asset ('uploads/documents/') }}{{ entity.imgPath }}" /></a>

            <p>
                <button type="submit">Izmeni</button>
            </p>
        </form>

        <ul>
            <li><a href="{{ path('brand') }}">Povratak na listu</a></li>
            <li>
                <form action="{{ path('brand_delete', { 'id': entity.id }) }}" method="post">
                    <input type="hidden" name="_method" value="DELETE" />
                    {{ form_widget(delete_form) }}
                    <button class="btn btn-yellow" type="submit">Izbrisi brend</button>
                </form>
            </li>
        </ul>
    </div>
{% endblock %}
